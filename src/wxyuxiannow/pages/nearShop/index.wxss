/* banner */
.swiper-box{width:100%;height:200px}
swiper-item image{width:100%;height:200px;display:inline-block;overflow:hidden}
/* flag */
view.text{display:flex;align-items:center;position:relative;padding:10px 10px 10px 12px;font-size:15px;color:#656565}
.line_flag{width:3px;height:18px;display:inline-block;background-color:#09bb07}
view.text text {margin-left: 10px;line-height: 18px;}
/* loading */
.shop-loading{display:flex;justify-content:center;align-items:center;padding-top:200rpx}

.shop-placeholder{display:flex;justify-content:center;align-items:center;color:#3a3737;padding-top:200rpx}
/* shop */
.item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.item image {
    display: block;
    width: 65px;
    height: 75px;
}

.item_middle {
    flex: 1;
    margin-left: 20px;
    padding-top: 5px;
    overflow: hidden;
    
}

.item_middle .title {
    font-size: 16px;
    color: #333;
}
.item_middle .content {
    font-size: 12px;
    color: #666;
    margin: 2px 0px;
}

.item_middle .look_count {
    font-size: 12px;
    color: #666;
    margin: 2px 0px;
    margin-top: 5px;
    color: #cf616a;
}
.item_right{
    margin-top: 5px;
}
.item_right .far {
    font-size: 12px;
    /* color: #cf616a; */
}

.item_right .type {
    margin-top: 30px;
    border: 1px solid #29cc6d;
    border-radius: 2px;
    color: #29cc6d;
    display: inline-block;
    padding: 2px 4px;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
}
.notice{
    display: flex;
    justify-content: space-between;  
    flex-wrap:wrap;
    height: 80rpx;
    line-height: 80rpx;
    width: 750rpx;
    margin-top: 10rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #efeff4;
  }
  .notice_icon {
    margin-top: 25rpx;
    margin-left:20rpx;
    width:30rpx;
    height:30rpx;
  }
  .notice_swiper{
    height: 80rpx;
    line-height: 80rpx;
    width: 680rpx;
  }
  .notice_itemr {
    padding-left: 10rpx;
    font-size: 24rpx;
    overflow: hidden;
    color: #e64340;
    width: 680rpx;
    height: 80rpx;
    line-height: 80rpx;
  }
